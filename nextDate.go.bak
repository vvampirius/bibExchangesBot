package main

import "time"

type NextDate struct {
	Weekends []time.Time
}

func (nextDate *NextDate) GetFirstWeekday(t time.Time) time.Time {
	for {
		if !nextDate.IsWeekend(t) { break }
		t = t.AddDate(0, 0, 1)
	}
	return t
}

func (nextDate *NextDate) IsWeekend(t time.Time) bool {
	weekday := t.Weekday()
	if weekday == 6 || weekday == 7 { return true }
	//TODO: add check nextDate.Weekends
	return false
}

func (nextDate *NextDate) GetNextWorkdayDay(t time.Time, monthDay int) {
	cycle := true
	for workday := nextDate.GetFirstWeekday(t); cycle;
}